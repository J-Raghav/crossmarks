{
  "manifest_version": 3,

  "name": "Crossmarks",
  "description": "Chrome Extension, ",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "contextMenus", "activeTab", "scripting"],

  "host_permissions": ["<all_urls>"]
}
